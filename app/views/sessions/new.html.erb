<div class="auth-container">
  <div class="auth-box">
    <h1 class="auth-brand">
      <%= link_to "VandalSquat", login_path %>
    </h1>

    <h2>Login</h2>

    <% if notice.present? %>
      <p><%= notice %></p>
    <% end %>

    <% if @error.present? %>
      <p class="auth-error"><%= @error %></p>
    <% end %>

    <%= form_with url: login_path, method: :post, local: true do %>
      <p>
        <label>Email<br>
          <input type="email" name="email" required>
        </label>
      </p>

      <p>
        <label>Password<br>
          <input type="password" name="password" required>
        </label>
      </p>

      <p>
        <button type="submit">Login</button>
      </p>
    <% end %>

    <p class="auth-alt">
      <%= link_to "Create an account", signup_path %>
    </p>
  </div>
</div>
