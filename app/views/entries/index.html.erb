<!doctype html>
<html lang="en">
  <head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <title>VandalSquat – Entries</title>
  </head>

  <body>
    <hr />

    <main>
      <h2>Entries</h2>

      <p>
        <label>
          Search
          <input type="search" name="search" />
        </label>
      </p>

      <table border="1">
        <thead>
          <tr>
            <th>Date</th>
            <th>Writer</th>
            <th>Location</th>
            <th>Notes</th>
            <th>Photo</th>
          </tr>
        </thead>

        <th>Actions</th>

<tbody>
  <% @entries.each do |entry| %>
    <tr>
      <td><%= entry.found_on || "—" %></td>
      <td><%= entry.writer_name.presence || "—" %></td>
      <td>
        <%= entry.latitude && entry.longitude ? "#{entry.latitude}, #{entry.longitude}" : "—" %>
      </td>
      <td><%= entry.notes.presence || "—" %></td>
      <td>
        <% if entry.photo.attached? %>
          <%= image_tag entry.photo, width: 100, height: 100, alt: "Graffiti photo" %>
        <% else %>
          —
        <% end %>
      </td>
      <td>
        <%= link_to "Edit", edit_entry_path(entry) %>
      </td>
    </tr>
  <% end %>
</tbody>

      </table>
    </main>
  </body>
</html>
