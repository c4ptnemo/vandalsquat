<!doctype html>
<html lang="en">
  <head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <title>VandalSquat – New Entry</title>
  </head>

  <body>
    <div class="auth-container">
      <div class="auth-box">
        <h2>New Entry — Details</h2>

        <% if flash[:alert] %>
          <p class="auth-error"><%= flash[:alert] %></p>
        <% end %>

        <%= form_with model: @entry, url: entries_path, method: :post, local: true, html: { multipart: true } do |f| %>
          <%= f.hidden_field :latitude %>
          <%= f.hidden_field :longitude %>

          <p>
            <label>
              Photo
              <%= f.file_field :photo, accept: "image/*", required: true %>
            </label>
          </p>

          <p>
            <label>
              Pin Type
              <%= f.select :pin_type, 
                [['Spot', 'Spot'], ['Tag', 'Tag'], ['Throw', 'Throw'], ['Piece', 'Piece']], 
                {}, 
                { required: true } %>
            </label>
          </p>

          <p>
            <label>
              Writer / Tag
              <%= f.text_field :writer_name %>
            </label>
          </p>

          <p>
            <label>
              Notes
              <%= f.text_area :notes, rows: 4 %>
            </label>
          </p>

          <p>
            <label>
              Date found
              <%= f.date_field :found_on %>
            </label>
          </p>

          <p><%= f.submit "Save entry" %></p>
        <% end %>
      </div>
    </div>
  </body>
</html>
