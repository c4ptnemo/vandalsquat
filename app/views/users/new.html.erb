<!doctype html>
<html lang="en">
  <head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <title>VandalSquat â€“ Create Account</title>
  </head>

  <body>
    <header>
      <h1>
        <a href="/">VandalSquat</a>
      </h1>

    </header>

    <hr />

    <main>
      <h2>Create account</h2>

<%= form_with url: signup_path, scope: :user, method: :post, local: true do |f| %>
  <p>
    <label>
      Email<br />
      <%= f.email_field :email, required: true %>
    </label>
  </p>

  <p>
    <label>
      Password<br />
      <%= f.password_field :password, required: true %>
    </label>
  </p>

  <p>
    <label>
      Confirm password<br />
      <%= f.password_field :password_confirmation, required: true %>
    </label>
  </p>

  <p>
    <%= f.submit "Create account" %>
  </p>
<% end %>


      <p>
        Already have an account?
        <a href="/login">Log in</a>
      </p>
    </main>

  </body>
</html>
