<!doctype html>
<html lang="en">
  <head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <title>VandalSquat â€“ My Account</title>
  </head>
  
<% if notice %><p><%= notice %></p><% end %>
<% if flash[:alert] %><p><%= flash[:alert] %></p><% end %>

  <body>
    <hr />

    <main>
      <h2>My Account</h2>

      <!-- Change email -->
      <section>
        <h3>Change Email</h3>

<%= form_with url: "/account/email", scope: :user, method: :patch, local: true do |f| %>
  <p>
    <label>
      New email<br />
      <%= f.email_field :email, required: true, value: current_user.email %>
    </label>
  </p>

  <p>
    <label>
      Current password<br />
      <input type="password" name="current_password" required>
    </label>
  </p>

  <p><%= f.submit "Update email" %></p>
<% end %>

      </section>

      <hr />

      <!-- Change password -->
      <section>
        <h3>Change Password</h3>

<%= form_with url: "/account/password", scope: :user, method: :patch, local: true do |f| %>
  <p>
    <label>
      New password<br />
      <%= f.password_field :password, required: true %>
    </label>
  </p>

  <p>
    <label>
      Confirm new password<br />
      <%= f.password_field :password_confirmation, required: true %>
    </label>
  </p>

  <p>
    <label>
      Current password<br />
      <input type="password" name="current_password" required>
    </label>
  </p>

  <p><%= f.submit "Update password" %></p>
<% end %>

      </section>
    </main>
  </body>
</html>
